<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= @title -%></h1>

<%= form_for :manifestations, :html => {:method => 'get'} do -%>
  <p>
    <%= t('advanced_search.from_date') -%> <%= text_field_tag 'search_date_first', h(@start_date), :size => 9 -%>
    <%= t('advanced_search.to_date') -%> <%= text_field_tag 'search_date_last', h(@end_date), :size => 9 -%></td>
    <%= submit_tag t('page.search') -%>
    <br />
  </p>
<%- end -%>


<div id="content_list">
<table class="index">
  <tr>
    <th>
      <%= t('page.exstatistics.ranknumber') -%> 
    </th>
    <th>
      <%= t('activerecord.attributes.manifestation.original_title') -%> 
    </th>
    <th>
    </th>
    <th>
      <%= t('page.exstatistics.readercount') -%>
    </th>
  </tr>
<%- @manifestations.each_with_index do |m, i| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%= i+1 -%>
    </td>
    <td>
      <%= link_to m.original_title, m -%>
    </td>
    <td>
      <%= render 'manifestations/show_creators', :manifestation => m -%>
    </td>
    <td>
      <%= @checkouts[i].cnt -%>
    </td>
  </tr>
<%- end -%>
</table>

</div>
</div>

<div id="submenu" class="ui-corner-all">
<ul>
  <li><%= link_to t('page.best_request'), manifestation_exstats_bestrequest_path -%></li>
</ul>
</div>
