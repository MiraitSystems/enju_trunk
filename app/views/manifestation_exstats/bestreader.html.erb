<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= @title -%></h1>

<%= form_for :manifestations, :html => {:method => 'get'} do -%>
  <p>
    <%= t('page.search_term') -%>:
    <%= t('advanced_search.from') -%> <%= text_field_tag 'number_of_pages_at_least', nil, :size => 9 -%>
    <%= t('advanced_search.to') -%> <%= text_field_tag 'number_of_pages_at_most', nil, :size => 9 -%></td>
    <%= submit_tag t('page.search') -%>
    <br />
    <%= link_to t('page.advanced_search'), page_advanced_search_path -%>
  </p>
<%- end -%>


<div id="content_list">
<table class="index">
  <tr>
    <th>
      <%= t('page.exstatistics.ranknumber') -%> 
    </th>
    <th>
      <%= t('activerecord.attributes.manifestation.original_title') -%> 
    </th>
    <th>
    </th>
    <th>
      <%= t('page.exstatistics.readercount') -%>
    </th>
  </tr>
<%- @manifestations.each_with_index do |m, i| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%= i+1 -%>
    </td>
    <td>
      <%= link_to m.original_title, m -%>
    </td>
    <td>
      <%= render 'manifestations/show_creators', :manifestation => m -%>
    </td>
    <td>
      <%= @checkouts[i].cnt -%>
    </td>
  </tr>
<%- end -%>
</table>

</div>
</div>

