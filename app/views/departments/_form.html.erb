<%= render 'page/required_field' %>
<%= simple_form_for(@department, :html => { :multipart => true }) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label :name -%> <%= t('department.help_name') -%><br />
    <%= f.text_field :name -%>
  </div>

  <div class="field">
    <%= f.label :display_name -%><br />
    <%= f.text_field :display_name -%>
  </div>

  <div class="field">
    <%= f.label :short_name -%><br />
    <%= f.text_field :short_name -%>
  </div>

  <div class="field">
    <%= f.label :note -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>
