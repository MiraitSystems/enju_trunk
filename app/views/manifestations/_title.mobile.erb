<% if user_signed_in? %>
  <% if manifestation.reservable? && Setting.operation %>
    <%- if manifestation.reservable_with_item?(current_user) -%>
      <%= link_to t('activerecord.models.reserve'), new_user_reserve_path(current_user, :manifestation_id => manifestation.id), "data-role" => "button" -%>
    <%- end -%>
  <% end %>
<% end %>

  <h2 class="resource_title">
    <%= manifestation.original_title -%>
  </h2>
  <p>
    <%- unless manifestation.creators.readable_by(current_user).empty? -%>
      <%= t('agent.creator') -%>: <%= agents_list(manifestation.creates.readable_by(current_user), :nolink => true) -%>
    <%- end -%>
    <%- unless manifestation.contributors.readable_by(current_user).empty? -%>
      <%= t('agent.contributor') -%>: <%= agents_list(manifestation.realizes.readable_by(current_user), :nolink => true) -%>
    <%- end -%>
    <%- unless manifestation.publishers.readable_by(current_user).empty? -%>
      <%= t('agent.publisher') -%>: <%= agents_list(manifestation.produces.readable_by(current_user), :nolink => true) -%>
    <% end %>
    <%- if manifestation.pub_date.present? -%>
      (<%= manifestation.pub_date -%>)
    <%- end -%>
    <%- unless manifestation.access_address.blank? -%>
      <br />
      <%= link_to manifestation.access_address, manifestation.access_address -%>
      <%= link_to image_tag('icons/world_go.png', :size => '16x16', :alt => ('Web')), manifestation.access_address -%>
    <%- end -%>
  </p>
