<div id="periodical">
  <%= paginate(@periodicals, :param_name => :periodical_list_page, :class => 'content_pagination digg_pagination') -%>
  <ul>
    <%- @periodicals.each do |periodical| -%>
      <li>
        [M]
        <%= link_to periodical.original_title, periodical -%>
        <%= form_icon(periodical.carrier_type) -%>
        <%= agents_list(periodical.creates.readable_by(current_user)) -%>
        <%= agents_list(periodical.realizes.readable_by(current_user)) -%>
        <%= agents_list(periodical.produces.readable_by(current_user)) -%>
        <%- if periodical.pub_date? -%>
          (<%= periodical.pub_date -%>)
        <%- end -%>
      </li>
    <%- end -%>
  </ul>
  <%= paginate(@periodicals, :param_name => :periodical_list_page, :class => 'content_pagination digg_pagination') -%>
</div>
