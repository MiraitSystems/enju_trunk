    $('#chkbox2_article_creator').attr('disabled', 'disabled')
    $('#chkbox2_article_original_title').attr('disabled', 'disabled')
    $('#chkbox2_article_title').attr('disabled', 'disabled')
    $('#chkbox2_series_original_title').attr('disabled', 'disabled')

