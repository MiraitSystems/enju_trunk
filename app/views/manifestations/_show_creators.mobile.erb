<div>
  <%- unless manifestation.creators.readable_by(current_user).empty? -%>
    <%- if params[:mode] == 'show_all_creators' -%>
      <%= t('agent.creator') -%>:<%= agents_list_mobile(manifestation.creators.except(:order).order(order_str('create')).readable_by(current_user), {}, manifestation.id, 'create') %>
    <%- else -%>
      <%= t('agent.creator') -%>:<%= agents_list_mobile(manifestation.creators.except(:order).order(order_str('create')).readable_by(current_user)[0..2], {}, manifestation.id, 'create') %>
    <%- end -%>
  <%- end -%>
</div>
<div>
  <%- unless manifestation.contributors.readable_by(current_user).empty? -%>
    <%= t('agent.contributor') -%>:<%= agents_list_mobile(manifestation.contributors.except(:order).order(order_str('realize')).readable_by(current_user), {}, manifestation.id, 'realize') %>
  <%- end -%>
</div>
<div>
  <%- unless manifestation.publishers.readable_by(current_user).empty? -%>
    <%= t('agent.publisher') -%>:<%= agents_list_mobile(manifestation.publishers.except(:order).order(order_str('produce')).readable_by(current_user), {}, manifestation.id, 'produce') %>
  <%- end -%>
</div>
<div>
  <%- if manifestation.pub_date.present? -%>
    <%= t('page.pub_date') -%>:<%= manifestation.pub_date -%>
  <%- end -%>
</div>
