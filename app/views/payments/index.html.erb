<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.payment')) -%></h1>
<div id="content_list">

<table>
  <tr>
    <th>Order</th>
    <th>Billing date</th>
    <th>Manifestation</th>
    <th>Currency unit code</th>
    <th>Currency rate</th>
    <th>Discount commision</th>
    <th>Before conv amount of payment</th>
    <th>Amount of payment</th>
    <th>Number of payment</th>
    <th>Volume number</th>
    <th>Note</th>
    <th>Auto calculation flag</th>
    <th>Payment type</th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to payment.order_id, payment %></td>
    <td><%= payment.billing_date %></td>
    <td><%= payment.manifestation_id %></td>
    <td><%= payment.currency_unit_code %></td>
    <td><%= payment.currency_rate %></td>
    <td><%= payment.discount_commision %></td>
    <td><%= payment.before_conv_amount_of_payment %></td>
    <td><%= payment.amount_of_payment %></td>
    <td><%= payment.number_of_payment %></td>
    <td><%= payment.volume_number %></td>
    <td><%= payment.note %></td>
    <td><%= payment.auto_calculation_flag %></td>
    <td><%= payment.payment_type %></td>
    <td>
      <%= link_to t('page.edit'), edit_payment_path(payment) %>
      <%= link_to t('page.destroy'), payment, :confirm => t('page.are_you_sure'), :method => :delete -%>
    </td>
  </tr>
<% end %>
</table>

<%= paginate(@payments) -%>

</div>
</div>


<div id="submenu" class="ui-corner-all">
  <ul>
    <%- if can? :create, Order -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.payment')), new_payment_path -%></li>
    <%- end -%>
  </ul>
</div>

