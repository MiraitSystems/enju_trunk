<%= form_for(@patron_relationship) do |f| %>
  <%= f.error_messages -%>
  <%= hidden_field_tag 'patron_id', params[:patron_id] %>
  <%= hidden_field_tag 'patron_relationship_type', params[:patron_relationship_type] if params[:patron_relationship_type] %>
  <%= hidden_field_tag 'page', params[:page] if params[:page] %>
  <div class="field">
    <% if @patron_relationship.try(:parent) %>
      <%= f.label :parent %><br />
      <%= link_to @patron_relationship.parent.full_name, @patron_relationship.parent %>
      <%= f.hidden_field :parent_id %>
    <% else %>
      <%= f.label :parent %><br />
      <%= f.text_field :parent_id %>
    <% end %>
  </div>
  <div class="field">
    <% if @patron_relationship.child.try(:full_name) %>
      <%= f.label :child %><br />
      <%= link_to @patron_relationship.child.full_name, @patron_relationship.child %>
      <%= f.hidden_field :child_id %>
    <% else %>
      <%= f.label :child %><br />
      <%= f.text_field :child_id %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :patron_relationship_type_id %><br />
    <%- primary = params[:patron_id] == @patron_relationship.parent_id.to_s ? 'c' : 'p' %>
    <%- secondary = primary == 'p' ? 'c' : 'p'-%>
    <%= f.select(:patron_relationship_type_id, @patron_relationship_types.collect{|r| [get_detail_name(r, primary, secondary), r.id]}) -%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
