<%= form_for(@reminder_list) do |f| %>
  <%= f.error_messages %>
  <div style="color: red"><%= raw flash[:message] -%></div>

  <div class="field">
    <%= f.label :checkout_id -%><br />
    <%- if @reminder_list.id -%>
      <%= @reminder_list.checkout_id %>
    <%- else -%>
      <%= f.text_field :checkout_id -%>
    <%- end -%>
  </div>
  <div class="field">
    <%= f.label :status -%><br />
    <%= f.select(:status, @reminder_list_statuses.collect{|r| [r[:display_name], r[:id]]}) -%>
  </div>
  <br />
  <div class="actions">
      <%= f.submit %>
  </div>
<%- end -%>
