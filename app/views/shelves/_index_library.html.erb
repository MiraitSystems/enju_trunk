<div id="content_detail" class="ui-corner-all">
  <h1 class="title"><%= t('page.listing', :model => t('activerecord.models.shelf')) -%></h1>
<div id="content_list">

<%= form_for :shelves, :html => {:method => 'get'} do -%>
  <%= t('advanced_search.library') -%>:
    <select id="library_id" name="library_id">
      <option value><%= t('advanced_search.all_libraries') -%></option>
      <%- @libraries.each do |library| -%>
        <option value="<%= library.id -%>"<%= " selected='selected'" if @library == library -%>><%= library.display_name.localize -%></option>
      <%- end -%>
    </select>
  <%= submit_tag t('page.search') -%>
<%- end -%>

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.shelf.name') -%></th>
    <th><%= t('activerecord.models.library') -%></th>
    <th></th>
  </tr>

<%- @shelves.each_with_index do |shelf, i| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if can? :update, shelf -%>
        <%= move_position(shelf) -%>
      <%- end -%>
    </td>
    <td>
      <%= link_to shelf.display_name.localize, shelf -%>
      <br />
      <%= shelf.name if can? :update, shelf %>
    </td>
    <td><%= link_to shelf.library.display_name.localize, library_path(shelf.library) -%></td>
    <td>
      <%- if can? :update, shelf -%>
        <%- unless shelf.open_access == 9 -%>
          <%= link_to t('page.edit'), edit_library_shelf_path(shelf.library, shelf) -%>
        <%- end -%>
      <% end %>
      <%- if can? :destroy, shelf -%>
        <%- unless shelf.id == 1 or shelf.open_access == 9 -%>
          <%= link_to t('page.destroy'), shelf, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
        <%- end -%>
      <%- end -%>
    </td>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@shelves) -%>
</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <%- if can? :create, Shelf -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.shelf')), new_library_shelf_path(@library) -%></li>
    <%- end -%>
  </ul>
</div>
