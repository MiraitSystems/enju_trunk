<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.create')) -%></h1>
<div id="content_list">

<%= form_for(@create) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label t('activerecord.models.agent') -%><br />
    <%- if @create.agent -%>
      <%= link_to @create.agent.full_name, @create.agent -%>
      <%= f.hidden_field :agent_id -%>
    <%- else -%>
      <%= f.text_field :agent_id -%>
    <%- end -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.models.work') -%><br />
    <%- if @create.work -%>
      <%= link_to @create.work.original_title, @create.work -%>
      <%= f.hidden_field :work_id -%>
    <%- else -%>
      <%= f.text_field :work_id -%>
    <%- end -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>

</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <%- if @create.agent -%>
      <li><%= link_to t('page.listing', :model => t('activerecord.models.work')), creator_manifestations_path(@create.agent) -%></li>
    <%- end -%>
    <%- if @create.work -%>
      <li><%= link_to t('page.listing', :model => t('activerecord.models.agent')), work_agents_path(@create.work) -%></li>
    <%- end -%>
  </ul>
</div>
