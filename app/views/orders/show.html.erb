<div id="content_detail" class="ui-corner-all ui-widget-content">
<h1 class="title"><%= t('page.showing', model: t('activerecord.models.order')) -%></h1>
<div id="content_list">
<p id="notice"><%= notice %></p>

<p>
  <strong><%= t('activerecord.models.order_list') -%>:</strong>
  <%= link_to @order.order_list.title, @order -%>
</p>

<p>
  <strong><%= order_item_label(@order) %>:</strong>
  <%= link_to @order.item.manifestation.original_title, @order.item -%>
</p>

<p>
  <strong><%= t('activerecord.attributes.order.purchase_order_number') %>:</strong>
  <%= @order.purchase_order_number -%>
</p>

<p>
  <strong><%= t('activerecord.attributes.order.price_string_on_order') %>:</strong>
  <%= number_to_currency(@order.price_string_on_order, unit: "") -%>
</p>


</div>
</div>

<div id="submenu" class="ui-corner-all ui-widget-content">
  <ul>
    <li><%= link_to t('page.back_to', model: t('activerecord.models.purchase_request')), purchase_requests_path(order_list_id: @order.order_list_id) -%></li>
  </ul>
</div>
