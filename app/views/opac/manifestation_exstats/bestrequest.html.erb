<script>
$(function() {
    $('.opac_lists_row').click(function(e) {
      if(!$(e.target).is('a')){
        window.location = $(e.target).closest('tr').data('href');
      };
  });
});
</script>

<div id="opac_header">
  <div class="opac_title"><h1><%= t('opac.manifestation_exstats.bestrequest') %></h1></div>
  <div class="opac_head_button_area">
    <div class="opac_head_button">
      <%= link_to t('opac..manifestation_exstats.bestreader'), manifestation_exstats_bestreader_path(:opac => true) %>
    </div>
    <div class="opac_head_button">
      <%= link_to t('opac.finish'), opac_path %>
    </div>
  </div>
</div>

<div id="opac_content_detail">
  <%= render 'opac/manifestation_exstats/sort_menu_bestrequest' %>
  <table class="index" id="opac_lists">
    <tr>
      <th><%= t('page.exstatistics.ranknumber') -%></th>
      <th><%= t('activerecord.attributes.manifestation.original_title') -%> </th>
      <th><%= t('page.exstatistics.requestcount') -%></th>
    </tr>
  <% if @ranks %>
    <% @ranks.each_with_index do |r, i| %>
      <tr class="opac_line<%= cycle('0', '1') %> opac_lists_row" data-href="<%= manifestation_path(r.manifestation, :opac => true) %>">
        <td><%= r.rank -%></td>
        <td>
          <div class="opac_list_title">
            <%= r.manifestation.original_title %>
          </div>
          <% unless r.manifestation.creators.readable_by(current_user).empty? and r.manifestation.publishers.readable_by(current_user).empty? %>
            <div class="opac_list_patrons">
              <% unless r.manifestation.creators.readable_by(current_user).empty? %>
                <%= t('patron.creator')%>:<%= patrons_short_list(r.manifestation.creators.readable_by(current_user), { :nolink => 'true' }) %>&nbsp;&nbsp;
              <% end %>
              <% unless r.manifestation.publishers.readable_by(current_user).empty? %>
                <%= t('patron.publisher') %>: <%= patrons_short_list(r.manifestation.publishers.readable_by(current_user), { :nolink => 'true' }) %>
              <% end %>
            </div>
          <% end %>
        </td>
        <td><%= @reserves[i].cnt if @reserves[i] -%></td>
      </tr>
    <% end %>
  <% end %>
</table>
</div>
