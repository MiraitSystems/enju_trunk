<div id="opac_index_header">
  <h1 class="opac_index_libraryname"><%= LibraryGroup.system_name(@locale) %></h1>
  <br />
  <%= t('opac.push_touchpanel') %>
</div>

<div id="opac_contents">
  <div id="opac_menu">
    <div id="opac_search_col">
      <%= link_to opac_search_path do %>
        <h1><img src="/assets/opac/book.png"/ style="width:20px;">&nbsp<%= t('opac.catalog_search') %></h1>
      <% end %>
    </div>
    <div id="opac_session_col">
      <%= link_to edit_my_account_path do %>
        <%= t('opac.login') %>
        <div class="opac_button_description"><%= t('opac.login_description')%></div>
      <% end %>
    </div>
    <div id="opac_easy">
      <div class="opac_bestreader">
        <%= link_to manifestation_exstats_bestreader_path do %>
          <%= t('opac.best_reader') %>
        <% end %>
      </div>
      <div class="opac_bestrequest">
        <%= link_to manifestation_exstats_bestrequest_path do %>
          <%= t('opac.best_request') %>
        <% end %>
      </div>
    </div>
  </div>

  <div id="opac_news">
    <h3><%= t('opac.news') %></h3>
    <dl class="opac_news_column">
      <% @events.each do |event| %>
        <dt class="opac_new_date">
          <%= l(event.start_at, :format => :short) %> - <%= l(event.end_at, :format => :short) -%>
        </dt>
        <dd class="opac_new_detail"><%= event.display_name %></dd>
      <% end %>
    </dl>
  </div>
</div>
