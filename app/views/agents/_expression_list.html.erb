<div id="expression">
  <%= paginate(@expressions, :param_name => :expression_list_page, :remote => true) %>
  <ul>
    <%- @expressions.each do |manifestation| -%>
      <li>
            [M]
            <%= link_to manifestation.original_title, manifestation.root_of_series? ? manifestation.series_statement : manifestation -%>
            <%= form_icon(manifestation.carrier_type) -%>
            <%= agents_list(manifestation.creates.readable_by(current_user)) -%>
            <%= agents_list(manifestation.realizes.readable_by(current_user)) -%>
            <%= agents_list(manifestation.produces.readable_by(current_user)) -%>
            <%- if manifestation.pub_date? -%>
              (<%= manifestation.pub_date -%>)
            <%- end -%>
      </li>
    <%- end -%>
  </ul>
  <%= paginate(@expressions, :param_name => :expression_list_page, :remote => true) %>
</div>
