<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.series_statement_relationship')) -%></h1>
  <div id="content_list">

    <h2 class="resource_title"><%= link_to @relationship_family.display_name, @relationship_family %></h2>

    <table class="table table-striped index">
      <tr>
        <th><%= t('activerecord.attributes.series_statement_relationship.titleid') %></th>
        <th><%= t('activerecord.models.series_statement') %></th>
        <th><%= t('activerecord.attributes.series_statement_relationship.fid') %></th>
        <th><%= t('activerecord.attributes.series_statement_relationship.seq') %></th>
        <th><%= t('activerecord.attributes.series_statement_relationship.bbid') %></th>
        <th><%= t('activerecord.attributes.series_statement_relationship.abid') %></th>
        <th><%= t('activerecord.models.series_statement_relationship_type') %></th>
        <th><%= t('activerecord.attributes.series_statement_relationship.source') %></th>
      </tr>

      <% @series_statement_relationships.each do |series_statement_relationship| %>
        <tr class="line<%= cycle("0", "1") %>">
          <td><%= series_statement_relationship.titleid %></td>
          <td></td>
          <td><%= series_statement_relationship.fid %></td>
          <td><%= series_statement_relationship.seq %></td>
          <td><%= series_statement_relationship.bbid %></td>
          <td><%= series_statement_relationship.abid %></td>
          <td><%= series_statement_relationship.series_statement_relationship_type.display_name %></td>
          <td><%= series_statement_relationship.source %></td>
        </tr>
      <% end %>
    </table>
    <%= paginate(@series_statement_relationships) %>
  </div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li>
      <%= link_to t('page.new', :model => t('activerecord.models.series_statement_relationship')), 
        new_relationship_family_series_statement_relationship_path %>
    </li>
  </ul>
</div>
