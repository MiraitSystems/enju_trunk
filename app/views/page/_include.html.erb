<%= stylesheet_link_tag 'html5-doctor-reset-stylesheet.min',
  'scaffold_modified', 'enju', 'enju_trunk_extra', 'acts_as_taggable_stylesheet',
  'colorbox', 'pagination',
  :cache => 'include'
%>
<%= stylesheet_link_tag 'portlets' %>
<%= stylesheet_link_tag 'smoothness/jquery-ui-1.8.14.custom',
  'smoothness/fg.menu', 'smoothness/fg.menu.button',
  :cache => 'include_jquery'
%>
<%= stylesheet_link_tag 'enju_print', :media => :print %>
<%= javascript_include_tag :defaults,
  'jquery.highlight-3', 'jquery.hotkeys', 'jquery.colorbox-min',
  'jquery.cookie', 'fg.menu', 'fg.menu.enju', 'pagination', 'select_locale',
  'portlets', 'tab_view',
  :cache => 'include'
%>
<%= javascript_include_tag %w{function_key_control.js jquery.auto_ruby.js enju_audio_control.js} %>
<%= csrf_meta_tag %>

<script>
function check_form() {
  <% unless SystemConfiguration.get("disp_alert_when_move_page_with_function") == false -%>
    var input_form = false
    checks = new Array();
    checks = [$('input[type=text]'), $('input[type=search]'), $('input[type=url]'),$('textarea')];

    for (var i = 0; i < checks.length; i++) {
      checks[i].each(function() {
        if ($(this).val().replace(/^\s+|\s+$/g, "" != ""))
          input_form = true
      });
    }

    if (input_form == true) {
      if (confirm("<%= t('function_key.will_move') -%>") == true)
        return true;
      else
        return false;
    }
  <% end %>
  return true;
}
</script>
