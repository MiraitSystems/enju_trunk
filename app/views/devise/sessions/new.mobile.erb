<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div data-role="content">
    <div data-role="fieldcontain">
      <p class="input_field">
        <%= f.label t('activerecord.attributes.user.username') %>
        <%= f.text_field :username, :class => 'login_password', :autofocus => true %>
      </p>

      <p class="input_field">
        <%= f.label t('activerecord.attributes.user.password') %>
        <%= f.password_field :password, :class => 'login_password' %>
      </p>

      <p id="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <p><%= f.submit t('page.sign_in') %></p>
    </div>

    <%= javascript_tag("$('#user_username').focus()") -%>

    <%= render "devise/shared/links" %>

  </div>
<% end -%>
