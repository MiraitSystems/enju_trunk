<%= simple_form_for(@sub_carrier_type) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :display_name %><br />
    <%= f.text_field :display_name %>
  </div>

  <div class="field">
    <%= f.label :carrier_type_id %><br />
    <%= f.select :carrier_type_id, CarrierType.all.map{|m| [m.display_name.localize, m.id]} %>
  </div>

  <div class="field">
    <%= f.label :nacsis_identifier %><br />
    <%= f.text_field :nacsis_identifier %>
  </div>

  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
