  <div id="content_list">

    <p id="notice"><%= notice %></p>

    <p>
      <b><%= t('activerecord.attributes.thema.name') -%>:</b>
      <%= @thema.name %>
    </p>

    <p>
      <b><%= t('activerecord.attributes.thema.description') -%>:</b>
